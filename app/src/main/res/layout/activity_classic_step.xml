<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/in"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnFirstAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首次鉴权" />

            <Button
                android:id="@+id/btnSecondAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二次鉴权" />

            <Button
                android:id="@+id/btnChargeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启动充电" />

            <Button
                android:id="@+id/btnChargeStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止充电" />

            <Button
                android:id="@+id/btnOffChargeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启用离线自动充电" />

            <Button
                android:id="@+id/btnUnoffChargeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="禁止离线自动充电" />
            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="断开连接" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
